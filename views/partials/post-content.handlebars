<div class="my-10 p-4 rounded bg-indigo-100 post">
  <div class="title">
    <h2 class="text-2xl">{{title}}</h2>
    <p>{{post_text}}</p>
  </div>
  <p class="meta">
    by <b><i>{{user.username}}</i></b> | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </p>
  